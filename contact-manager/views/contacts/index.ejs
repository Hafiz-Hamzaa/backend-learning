<%- include("../partials/header") %>

<section class="section">
  <h1>All Contacts</h1>

  <% if (contacts.length === 0) { %>
    <p class="no-contacts">No contacts found.</p>
  <% } else { %>
    <ul class="contact-list">
      <% contacts.forEach(contact => { %>
        <li class="contact-card">
          <div class="contact-info">
            <h3><%= contact.name %></h3>
            <p>ğŸ“§ <%= contact.email %></p>
            <p>ğŸ“ <%= contact.phone %></p>
            <p>ğŸ“ <%= contact.notes %></p>
          </div>
          <div class="contact-actions">
            <a class="edit-btn" href="/contacts/edit/<%= contact._id %>">Edit</a>
            <form action="/contacts/delete/<%= contact._id %>?_method=DELETE" method="POST" class="delete-form">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>

