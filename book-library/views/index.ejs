<!DOCTYPE html>
<html>
<head>
    <title>Book Library</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="container">
    <h1>ðŸ“š Book Library</h1>

    <div class="top-bar">
        <a href="/add" class="btn primary">+ Add New Book</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <% books.forEach(book => { %>
            <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.genre %></td>
                <td>Rs <%= book.price %></td>
                <td class="actions">
                    <a href="/edit/<%= book.id %>" class="btn small">Edit</a>
                    <form action="/delete/<%= book.id %>" method="POST">
                        <button type="submit" class="btn small danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

</body>
</html>
